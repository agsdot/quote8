
<!DOCTYPE html>
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <title>Quote 8</title>

  <link rel="stylesheet" href="assets/normalize.css">
  <link rel="stylesheet" href="assets/foundation.css">
  <link rel="stylesheet" href="assets/mystyle.css">

  <script src="js/vendor/custom.modernizr.js"></script>
  <script src="/assets/animation.js"></script>
</head>

  <body>
    <!-- Main Page Content -->
    <div class="row">
      <div class="large-8 large-centered columns">
        <%= render 'bookmarklet' %>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="large-8 large-centered columns">
        <p>Highlight the text you want to save, then just click on the Quote8 bookmarklet!</p>
        <img src="../assets/screenshot2.png">

      </div>
    </div>
    <hr />
    <!-- login Form -->
    <div class="row">
      <div class="large-6 large-centered columns">
        <form  action="../users" method="post">
          <fieldset>
            <legend>Signup</legend>
            <input type="text" name="user[email]" placeholder="Your Email">
            <input type="password" name="user[password]" placeholder="Password">
            <input type="password" name="user[password_confirmation]" placeholder="Confirm Password">
            <button class="sign_up" type="submit">Sign Up</button>
            <p>Already a member? <a href="/users/sign_in">Log In</a>
            </fieldset>
          </form>
        </div>
      </div>
      <!-- End form -->
      <hr />

      <div class ="row">
        <div class="large-6 large-centered columns about-section">
          <h3>Trending Quote8 Tags</h3>
          <br />
            <% tag_cloud Bookmark.tag_counts, %w[s m l] do |tag, css_class| %>
              <ul class="tags">
               <li class="tag"> <%= link_to tag.name, tag_path(tag.name), class: css_class %>
              </li>
            <% end %>
        </div>
      </div>


  <!-- End Main Content -->
  </body>
</html>
